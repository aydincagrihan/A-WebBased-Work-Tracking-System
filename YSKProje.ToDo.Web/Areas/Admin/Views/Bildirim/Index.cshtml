@model List<BildirimListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@if (Model.Count > 0)
{
    foreach (var bildirim in Model)
    {
        <div class="alert alert-light p-3 my-2">


            <form method="post" asp-action="Index" class="my-1">
                <p class="lead">
                    <input type="hidden" name="id" value="@bildirim.Id" />
                    @bildirim.Aciklama
                    <button type="submit" class="btn btn-info btn-sm float-right">Okundu</button>
                </p>

            </form>
        </div>

    }
}
else
{
    <div class="alert alert-light p-3 my-2">
        <p class="lead">
            Okunmamış bildiriminiz bulunmamaktadır.
        </p>
    </div>

}



